<% content_for :title, "Send Draft Invites" %>

<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Send Draft Invites</h1>
        <p class="mt-2 text-sm text-gray-600">
          Invite players to join Season <%= @draft.season_number %> of Survivor Draft.
        </p>
      </div>
      <%= link_to @draft, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Back to Draft
      <% end %>
    </div>

    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <%= form_with(url: send_invites_draft_path(@draft), method: :post, local: true, class: "space-y-6") do |form| %>
          <div>
            <%= form.label :emails, "Email Addresses", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.text_area :emails, 
                  class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                  placeholder: "Enter email addresses separated by commas or spaces",
                  rows: 5 %>
            </div>
            <p class="mt-2 text-sm text-gray-500">
              You can enter multiple email addresses separated by commas or spaces.
            </p>
          </div>

          <div class="flex justify-end space-x-3 pt-4">
            <%= link_to 'Cancel', @draft, 
                class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            <%= form.submit 'Send Invites', 
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 