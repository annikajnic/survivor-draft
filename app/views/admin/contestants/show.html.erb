<div class="card">
  <div class="card-header">
    <h2 class="mb-0">Contestant Details</h2>
  </div>
  <div class="card-body">
    <div class="row mb-3">
      <div class="col-md-3">
        <strong>Name:</strong>
      </div>
      <div class="col-md-9">
        <%= @contestant.name %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3">
        <strong>Season:</strong>
      </div>
      <div class="col-md-9">
        <%= @contestant.season_number %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3">
        <strong>Tribe:</strong>
      </div>
      <div class="col-md-9">
        <%= @contestant.tribe %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3">
        <strong>Status:</strong>
      </div>
      <div class="col-md-9">
        <span class="badge <%= @contestant.status == 'active' ? 'bg-success' : 'bg-danger' %>">
          <%= @contestant.status.titleize %>
        </span>
      </div>
    </div>

    <div class="mt-4">
      <%= link_to 'Edit', edit_admin_contestant_path(@contestant), class: 'btn btn-primary me-2' %>
      <%= link_to 'Back to List', admin_contestants_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div> 