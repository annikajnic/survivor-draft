<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900"><%= @contestant.name %></h1>
    <div class="flex space-x-2">
      <%= link_to 'Edit', edit_admin_contestant_path(@contestant), class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to 'Back to Contestants', admin_contestants_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Contestant Details</h2>
          <dl class="grid grid-cols-1 gap-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Name</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @contestant.name %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Season</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @contestant.season_number %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Tribe</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @contestant.tribe %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Status</dt>
              <dd class="mt-1">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= @contestant.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                  <%= @contestant.status.titleize %>
                </span>
              </dd>
            </div>
          </dl>
        </div>

        <div>
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Performance</h2>
          <dl class="grid grid-cols-1 gap-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Total Points</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @contestant.total_points %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Average Points</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @contestant.average_points %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Votes Received</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @contestant.votes_received %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Votes Cast</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @contestant.votes_cast %></dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div> 