<%= form_with(model: [:admin, contestant], local: true) do |form| %>
  <% if contestant.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(contestant.errors.count, "error") %> prohibited this contestant from being saved:</h4>
      <ul>
        <% contestant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :status, class: 'form-label' %>
    <%= form.select :status, 
        [['Active', 'active'], ['Eliminated', 'eliminated']], 
        {}, 
        class: 'form-select' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', admin_contestants_path, class: 'btn btn-secondary ms-2' %>
  </div>
<% end %> 