<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Manage Contestants</h1>
    <%= link_to 'New Contestant', new_admin_contestant_path, class: 'btn btn-primary' %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @contestants.each do |contestant| %>
          <tr>
            <td><%= contestant.name %></td>
            <td>
              <span class="badge <%= contestant.status == 'active' ? 'bg-success' : 'bg-danger' %>">
                <%= contestant.status.titleize %>
              </span>
            </td>
            <td>
              <%= link_to 'Edit', edit_admin_contestant_path(contestant), class: 'btn btn-sm btn-outline-primary me-2' %>
              <%= button_to 'Delete', admin_contestant_path(contestant), 
                  method: :delete, 
                  class: 'btn btn-sm btn-outline-danger',
                  form: { data: { turbo_confirm: 'Are you sure you want to delete this contestant?' } } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 