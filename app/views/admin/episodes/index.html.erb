
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Episodes</h1>
    <%= link_to 'New Episode', new_admin_episode_path, class: 'btn btn-primary' %>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Number</th>
              <th>Season</th>
              <th>Air Date</th>
              <th>Voting Deadline</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @episodes.each do |episode| %>
              <tr>
                <td><%= Episode %></td>
                <td><%= Episode.season_number %></td>
                <td><%= Episode.air_datetim %></td>
                <td><%= Episode.voting_deadline %></td>
                <td>
                  <span class="badge <%= Episode.status == 'active' ? 'bg-success' : 'bg-danger' %>">
                    <%= Episode.status.titleize %>
                  </span>
                </td>
                <td>
                  <%= link_to 'Show', admin_episode_path(Episode), class: 'btn btn-sm btn-info me-1' %>
                  <%= link_to 'Edit', edit_admin_episode_path(Episode), class: 'btn btn-sm btn-primary me-1' %>
                  <%= button_to 'Delete', admin_episode_path(Episode), method: :delete, 
                      class: 'btn btn-sm btn-danger', 
                      form: { class: 'd-inline' },
                      data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

     
  </div>
</div> 