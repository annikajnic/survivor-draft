<div class="auth-container p-5 row justify-content-center">

      <div class="auth-card">
        <div class="auth-header text-center mb-4">
          <h2 class="auth-title">Welcome Back</h2>
          <p class="auth-subtitle">Sign in to your account</p>
        </div>

        <div class="auth-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :email, class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="bi bi-envelope"></i>
                </span>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
              </div>
            </div>

            <div class="form-group mb-4">
              <%= f.label :password, class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="bi bi-lock"></i>
                </span>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-4">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid gap-2">
              <%= f.submit "Sign In", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <div class="auth-footer text-center mt-4">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-decoration-none" %>
            <% end %>
            
            <div class="mt-3">
              <p class="mb-0">Don't have an account? 
                <%= link_to "Sign up", new_registration_path(resource_name), class: "text-decoration-none" %>
              </p>
            </div>
          </div>
        </div>
      </div>

</div>

<style>
  .auth-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 2rem 0;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  }

  .auth-card {
    background: white;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 2rem;
  }

  .auth-header {
    margin-bottom: 2rem;
  }

  .auth-title {
    color: #2c3e50;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .auth-subtitle {
    color: #7f8c8d;
    font-size: 0.9rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-label {
    color: #2c3e50;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .input-group-text {
    background-color: #f8f9fa;
    border-right: none;
  }

  .form-control {
    border-left: none;
  }

  .form-control:focus {
    box-shadow: none;
    border-color: #ced4da;
  }

  .btn-primary {
    background-color: #3498db;
    border: none;
    padding: 0.75rem;
    font-weight: 500;
  }

  .btn-primary:hover {
    background-color: #2980b9;
  }

  .form-check-label {
    color: #7f8c8d;
  }

  .auth-footer a {
    color: #3498db;
  }

  .auth-footer a:hover {
    color: #2980b9;
  }
</style>
