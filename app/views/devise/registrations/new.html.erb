<% content_for :title, "Sign Up" %>

<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <h2 class="text-center mb-4">Create Account</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row">
            <div class=" mb-3">
              <%= f.label :name, class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="bi bi-person"></i>
                </span>
                <%= f.text_field :name, value: "", autofocus: true, class: "form-control", required: true %>
          </div>
        </div>

           
          </div>

          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="bi bi-envelope"></i>
              </span>
              <%= f.email_field :email, autocomplete: "email", class: "form-control", required: true %>
          </div>
        </div>

          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="bi bi-lock"></i>
              </span>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
            </div>
            <% if @minimum_password_length %>
              <div class="form-text">
                Minimum <%= @minimum_password_length %> characters
              </div>
            <% end %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="bi bi-lock"></i>
              </span>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
            </div>
        </div>

          <div class="d-grid gap-2">
            <%= f.submit "Sign Up", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <div class="text-center mt-4">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .card {
    border: none;
    border-radius: 1rem;
  }

  .form-label {
    font-weight: 500;
    color: #2c3e50;
  }

  .input-group-text {
    background-color: #f8f9fa;
    border-right: none;
  }

  .form-control {
    border-left: none;
  }

  .form-control:focus {
    box-shadow: none;
    border-color: #ced4da;
  }

  .btn-primary {
    background-color: #3498db;
    border: none;
    padding: 0.75rem;
    font-weight: 500;
  }

  .btn-primary:hover {
    background-color: #2980b9;
  }

  .form-text {
    color: #6c757d;
    font-size: 0.875rem;
  }
</style>
